<!DOCTYPE html>
<html lang="en">
<head>
<%- include("partials/head") %>
</head>
<body>
  <div class="classic-box large">
    <nav class="navbar">
      <ul class="navbar__list">
        <li class="green pointer" id="gen-pass">Generate</li>
        <li class="red pointer" id="delete-item">Delete</li>
        <li class="blue pointer" id="add-item">Add new item</li>
        <li>
          <button class="classic-btn m0" id="save-as">Save as</button>
        </li>
      </ul>
    </nav>

    <form class="data-list" action="/save" method="post">
      <span class="checkbox checkbox__all checkbox--off">
        <i class="fa-solid fa-check checkbox__icon"></i>
      </span>

      <div class="data-list__item">
        <span class="checkbox checkbox__main checkbox--off" onclick="checkboxToggle(this)">
          <i class="fa-solid fa-check checkbox__icon"></i>
        </span>
        <input type="text" name="website" autofocus>
        <div class="rel">
          <input type="password" name="password" class="password">
          <button type="button" class="password-btn" data-toggle="Show;Hide" onclick="passwordVisibilityToggle(this)">Show</button>
        </div>
        <i class="fa-regular fa-copy data-list__icon copy" onclick="copy(this)"></i>
      </div>
    </form>
  </div>

  <%- include('partials/footer') %>

</body>
</html>